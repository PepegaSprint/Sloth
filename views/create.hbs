
    <form action="/create" method="POST">
    <br>
<div class="new" style="display: inline; width:70%">
    <input name="userNamee" type="hidden" value='{{userName}}'>
    <div class="col s12 m7">
      <div class="card" style="width: 700px;">
        <div class="card-image" style="background-color: orange ; height: 150px;">
          <span class="card-title">Название события
            <input id="eventname" name="eventname"></input>
          </span>
          
        </div>
        <div class="card-content">
                  <div class="myButtons">
           <div class="but" onclick="change(this)">
              <img class="icon" src="/micON.png" height="30px" width="30px" alt="0">
           </div>
           <div class="but" onclick="change2(this)">
              <img class="icon" src="/cam.png" height="30px" width="30px" alt="0">
           </div>
           <div class="but" onclick="change3(this)">
              <img class="icon" src="/Vr.png" height="30px" width="30px" alt="0">
           </div>
           <input name="types" id="my_butt" type="hidden" value='222'>
    </div>

            <label for="game">Название игры</label>
            <input style="width: 450px;" id="game" name="game"></input>
            <br>
            <label for="description">Описание</label>
            <textarea class="materialize-textarea"  id="description" name="description"></textarea>
          <br>
            <label  for="startDate">Дата начала:</label>
            <input style="width: auto; margin-right:100px" type="date"  id="startDate" name="startDate"></input>
    
        <label for="startTime">Время начала:</label>
        <input style="width: auto; " type="time" id="startTime" name="startTime"></input>
        </div>
        <div class="card-action">
            <button class="btn waves-effect orange darken-1" type="submit" name="action" value="{{userIds}}">Создать
            </button>
                            <label style="margin-left: 60px; display:inline-block">Количество участников: </label>
                            <input style= "display:inline-block; width:50px" id="maxParticipants" name="maxParticipants"></input>

        </div>




        </div>


</form>

<script>
      


      
       function change(obj){
              let img1=obj.getElementsByClassName('icon')[0];
              obj.style.backgroundColor="red"
              if(img1.alt=="0") {img1.src="/micOFF.png"; img1.alt="1"; my_butt.value=+my_butt.value-100;
              }
              else {img1.src="/micON.png";
              obj.style.backgroundColor="#fb8c00";img1.alt="0";my_butt.value=+my_butt.value+100;}

       }
        function change2(obj){
              let img1=obj.getElementsByClassName('icon')[0];
              obj.style.backgroundColor="red"
              if(img1.alt=="0") {img1.src="/noCam.png"; img1.alt="1"; my_butt.value=+my_butt.value-10;
              }
              else {img1.src="/cam.png";
              obj.style.backgroundColor="#fb8c00";img1.alt="0"; my_butt.value=+my_butt.value+10;}

       }
               function change3(obj){
              let img1=obj.getElementsByClassName('icon')[0];
              obj.style.backgroundColor="red"
              if(img1.alt=="0") {img1.src="/NOVr.png"; img1.alt="1"; my_butt.value=+my_butt.value-1;
              }
              else {img1.src="/Vr.png";
              obj.style.backgroundColor="#fb8c00";img1.alt="0";my_butt.value=+my_butt.value+1;}

       }
    </script>